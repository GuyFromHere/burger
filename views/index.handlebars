<div class="main">
    <h1>Eat Da Burger!</h1>

    <div class="container">
        <div class="col-left">
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burger-options devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-mid">
            <ul>
                {{#each burger}}
                {{#unless devoured}}
                {{> burger-buttons devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-right">
            <ul>
                {{#each burger}}
                {{#if devoured}}
                {{> burger-options devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class='form-container'>
            <form id="burgerForm">
                <label id="burgerLabel" for="newBurger">What'll it be?</label><br>
                <input type="text" id="newBurger" name="newBurger">
                <button type="submit" id="submitBtn">Make it!</button>
            </form>
        </div>
    </div>


</div>