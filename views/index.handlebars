<div class="main">
    <h1>Eat Da Burger!</h1>
    <div class="container">
        <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burger-options devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
        <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{> burger-buttons devoured=false}}
            {{/unless}}
            {{/each}}
        </ul>
        <ul>
            {{#each burger}}
            {{#if devoured}}
            {{> burger-options devoured=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
    <form id="burgerForm">
        <input type="text" id="newBurger">
        <br>
        <button type="submit" id="submitBtn">Submit</button>
    </form>

</div>